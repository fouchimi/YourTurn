<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_scrollFlags="scroll|enterAlways">

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_marginTop="@dimen/mar_8dp"
        android:layout_marginLeft="@dimen/mar_8dp"
        android:layout_marginStart="@dimen/mar_8dp"
        android:layout_marginRight="@dimen/mar_4dp"
        android:layout_marginEnd="@dimen/mar_4dp"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/group_thumbnail"
            android:layout_width="@dimen/pic_size"
            android:layout_height="@dimen/pic_size"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_8dp"
        android:layout_toRightOf="@+id/imageContainer"
        android:layout_toEndOf="@+id/imageContainer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="@dimen/pad_8dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_22_sp" />

            <TextView
                android:id="@+id/group_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/txt_22_sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="@dimen/mar_8dp"
                android:layout_marginStart="@dimen/mar_8dp"/>

        </LinearLayout>



    </RelativeLayout>

    <View
        android:background="@color/border_grey"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@id/textContainer"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
